<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.SettingActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_add_arrive_alarm"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleCentered="true"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/liner_wraps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_setting_list_border_bottom"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightgray"
            android:text="메뉴"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_alarm"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/shape_main_bus_list_border_up"
            android:gravity="center_vertical|center"
            android:text="알람 설정"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tv_home_edit"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/shape_main_bus_list_border_up"
            android:gravity="center_vertical|center"
            android:text="홈화면 편집"
            android:textSize="20dp" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>