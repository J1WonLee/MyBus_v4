<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="20dp"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/route_detail_first_last_station"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/arr_alarm_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:text="이미 설정된 도착 알림이 있습니다." />
        <TextView
            android:gravity="center"
            android:id="@+id/arr_alarm_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기존 알림을 삭제하고 다른 알림을 설정하시겠습니까?"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:id="@+id/route_detail_wdays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/dialog_button_deco"
            android:layout_marginLeft="44dp"
            android:gravity="center"
            android:id="@+id/arr_alarm_dialog_yes_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:text="확인" />


        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/dialog_button_deco"
            android:layout_marginLeft="20dp"
            android:id="@+id/arr_alarm_dialog_no_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:text="취소" />
    </LinearLayout>
</LinearLayout>