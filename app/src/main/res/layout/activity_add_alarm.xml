<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.alarm.AddAlarmActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:menu="@menu/menu_alarm_list"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/alarmTitle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="84dp"
        android:text="즐겨찾기 선택 "
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/timePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addAlarm"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toTopOf="@+id/timePicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toEndOf="@+id/alarmTitle"
        app:layout_constraintTop_toBottomOf="@+id/addAlarm"
        app:layout_constraintVertical_bias="0.172" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:timePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/alarmTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-200dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="5dp"
            android:id="@+id/mon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="월"
            android:textSize="10sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="5dp"
            android:id="@+id/tue"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="화"
            android:textSize="10sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="5dp"
            android:id="@+id/wen"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="수"
            android:textSize="10sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="5dp"
            android:id="@+id/thr"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="목"
            android:textSize="10sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="5dp"
            android:id="@+id/fri"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="금"
            android:textSize="10sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="5dp"
            android:id="@+id/sat"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="토"
            android:textSize="10sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="5dp"
            android:id="@+id/sun"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="일"
            android:textSize="10sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>