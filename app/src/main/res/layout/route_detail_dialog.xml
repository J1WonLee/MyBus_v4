<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/dialog_custom_border"
    android:padding="20dp"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/item_list_customborder"
        android:id="@+id/route_detail_first_last_station"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/route_detail_first_last_station_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="기점, 종점" />
        <TextView
            android:gravity="center"
            android:id="@+id/route_detail_first_last_station_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15sp"
            android:hint="시작 정류장"/>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/item_list_customborder"
        android:orientation="vertical"
        android:id="@+id/route_detail_wdays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:id="@+id/route_detail_wdays_first_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="금일 첫차/막차 시간 "
            />
        <TextView
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/route_detail_wdays_first_last_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="07:20  / 23:23" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/item_list_customborder_bottom"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/route_detail_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:id="@+id/route_detail_term_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="배차 간격  "
            />
        <TextView
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/route_detail_term_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="07:20  / 23:23" />
    </LinearLayout>
</LinearLayout>