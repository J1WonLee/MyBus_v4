<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_marginLeft="30dp"
    android:padding="0dp"
    android:id="@+id/bus_route_item_wrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bus_route_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_marginRight="60dp"
            android:id="@+id/bus_route_line_wrap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/but_route_line_first_wrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_marginTop="12dp"
                    android:id="@+id/bus_route_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textSize="8sp" />

                <ImageView
                    android:visibility="gone"
                    android:scaleType="center"
                    android:layout_marginRight="-24.5dp"
                    android:id="@+id/bus_first_image"
                    android:src="@drawable/ic_baseline_directions_bus_24"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    />

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/bus_route_line_first"
                    android:src="@drawable/ic_vertical_line"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/but_route_line_second_wrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_marginTop="6dp"
                    android:id="@+id/bus_route_second_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textSize="8sp" />

                <ImageView
                    android:visibility="gone"
                    android:layout_marginRight="-24.5dp"
                    android:id="@+id/bus_second_image"
                    android:src="@drawable/ic_baseline_directions_bus_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:layout_marginTop="-2dp"
                    android:id="@+id/bus_route_line_second"
                    android:src="@drawable/ic_baseline_arrow_drop_down_circle_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-3dp"
                android:orientation="horizontal"
                android:id="@+id/but_route_line_third_wrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_marginTop="12dp"
                    android:id="@+id/bus_route_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textSize="8sp" />

                <ImageView
                    android:visibility="gone"
                    android:scaleType="center"
                    android:layout_marginRight="-24.5dp"
                    android:id="@+id/bus_third_image"
                    android:src="@drawable/ic_baseline_directions_bus_24"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    />

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/bus_route_line_third"
                    android:src="@drawable/ic_vertical_line"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="70dp"
            android:padding="10dp"
            android:id="@+id/bus_route_stops_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bus_route_stop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="정류장 명"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/bus_route_stop_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정류장 번호"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>





